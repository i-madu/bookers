<% @book.errors.full_messages.each do |message| %>
  <div class = "form-error">
    <%= message %>
  </div>
<% end %>

<h1>Editing Book</h1>
<%= form_with model:@book,url:'books',method: :patch, local:true do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Body</p>
 <%= f.text_area :body %>
 
 <%= f.submit'Update Book' %>
 <% end %>
 
 <div class = "link">
   <%= link_to "Show",show_path(@book.id) %>
   <%= link_to "Back",index_path %>
 </div>
 
