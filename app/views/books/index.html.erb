<div class ="all">
<div class = "flash">
<%= flash[:destroy] %>
</div>

<h1 class = "heading">Books</h1>

<div class ="book-box">
   <table>
     <thead class = "books-heading">
      <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan = "3"></th>
      </tr>
    </thead>
  
     <tbody>
   ã€€ <% @books.each do |book| %>
      <tr>
       <td class = "a"><%= book.title %></td>
       <td class = "b"><%= book.body %></td>
       <td class = "c"><%= link_to "Show",book_path(book) %></td>
       <td><%= link_to "Edit",edit_book_path(book) %></td>
       <td><%= link_to "Destroy",book_path(book),method: :delete,"data-confirm"=>"Are you sure?" %></td>
     </tr>
      <% end %>
    </tbody>
   </table>

 
</div>



<h2 class = "form-heading">New book</h2>
<% if @book.errors.any? %>
 <div class = "error-field">
  <div class ="error-message">
  <%= @book.errors.count %>errors prohibited this book from being saved:
  </div>
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>
 </div>

 <div class = "form-box">
  <%= form_with model:@book,url:'books',method: :post, local:true do |f| %>
   <% if @book.errors.any? %>
    <div class = "form-item ">
     <div class ="field_with_errors">
      <label for = "book_title">Title</label>
     </div>
      <%= f.text_field :title %>
    </div>
   <% else %>
    <div class = "form-item">
      <label for = "book_title">Title</label>
      <%= f.text_field :title %>
    </div>
   <% end %>

   <% if @book.errors.any? %>
    <div class = "form-item">
     <div class = "field_with_errors">
      <label for = "book_body">Body</label>
    </div>
     <%= f.text_area :body %>
    </div>
   <% else %>
    <div class = "form-item">
      <label for = "book_body">Body</label>
     <%= f.text_area :body %>
    </div>
   <% end %>
   <div class = "form-item">
     <%= f.submit'Create Book' %>
   </div>
 <% end %>
 
 </div>

</div>