<h1>Books</h1>

<div class ="list-box">
  <h4>Title</h4><h4>Body</h4>
  <% @books.each do |book| %>
   <table>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to "Show",show_path(book) %></td>
       <td><%= link_to "Edit",edit_path(book) %></td>
       <td><%= link_to "Destroy",destroy_path(book),method: :delete,"data-confirm"=>"Are you sure?" %></td>
     </tr>
   </table>

  <% end %>
</div>



<h2>New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved:
 <ul class = "error-message">
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
</ul>
<% end %>

<%= form_with model:@book,url:'books',method: :post, local:true do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Body</p>
 <%= f.text_area :body %>

 <%= f.submit'Create Book' %>
<% end %>
