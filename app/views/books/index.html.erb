<div class ="all">
<div class = "flash">
<%= flash[:destroy] %>
</div>

<h1 class = "heading">Books</h1>

<div class ="book-box">
   <table>
     <thead class = "books-heading">
      <tr>
       <th>Title</th>
       <th>Body</th>
      </tr>
    </thead>
  
     <tbody>
   ã€€ <% @books.each do |book| %>
      <tr align = "center">
       <td class = "a"><%= book.title %></td>
       <td class = "b"><%= book.body %></td>
       <td class = "c" colspan = "3"><%= link_to "Show",show_path(book) %></td>
       <td><%= link_to "Edit",edit_path(book) %></td>
       <td><%= link_to "Destroy",destroy_path(book),method: :delete,"data-confirm"=>"Are you sure?" %></td>
     </tr>
      <% end %>
    </tbody>
   </table>

 
</div>



<h2 class = "form-heading">New book</h2>


<% if @book.errors.any? %>
 <div class = "error-field">
  <div class ="error-message">
  <%= @book.errors.count %>errors prohibited this book from being saved:
  </div>
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>
 </div>

<div class = "form">
 <%= form_with model:@book,url:'books',method: :post, local:true do |f| %>
  <div class = "form">
   <label for = "book_title">Title</label>
   <%= f.text_field :title %>
  </div>

  <div class = "form">
   <label for = "book_body">Body</label>
   <%= f.text_area :body %>
  </div>

  
   <%= f.submit'Create Book' %>
 
 <% end %>
</div>

</div>